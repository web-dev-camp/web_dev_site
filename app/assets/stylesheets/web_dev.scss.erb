/**	Proxima nova
*************************************************** **/
@font-face{
	font-family:'ProximaNova';
	src:url(<%= font_path 'proximaNovaRegular.otf' %>);
	font-weight:normal;
	font-style:normal;
}

@font-face{
	font-family:'ProximaNova';
	src:url(<%= font_path 'proximaNovaBold.otf' %>);
	font-weight:bold;
	font-style:normal;
}

/* util classes that are actually used */
.height-400			{ height:400px !important; }
.height-300			{ height:300px !important; }
.margin-bottom-20	{ margin-bottom:20px !important; }
.margin-bottom-30	{ margin-bottom:30px !important; }
.margin-bottom-80	{ margin-bottom:80px !important; }
.margin-20		{ margin:20px !important; }
.margin-top-20		{ margin-top:20px !important; }
.margin-top-80		{ margin-top:80px !important; }
.letter-spacing-1 { letter-spacing: 0.1em !important; }

/* entire container, keeps perspective */

.flip-container {
  perspective: 1000;
  &:hover .flipper, &.hover .flipper {
    transform: rotateY(180deg);
  }
  height: 480px;
}

.flipper {
  transition: 0.6s;
  transform-style: preserve-3d;
  position: relative;
}

/* hide backk of pane during swap */

.frontt, .backk {
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	img {
		border-radius: 3px;
		-moz-border-radius: 3px;
		-webkit-border-radius: 3px;
	}
	padding: 20px;
  height: 480px;
}

.frontt, .backk {
  backface-visibility: hidden;
  position: absolute;
  top: 0;
  left: 0;
}

/* frontt pane, placed above backk */

.frontt {
  z-index: 2;
  /* for firefox 31 */
  transform: rotateY(0deg);
}

/* backk, initially hidden pane */

.backk {
  transform: rotateY(180deg);
}
