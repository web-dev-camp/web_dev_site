.height-300{
  height: 300px;
}
.sliderWrapper {
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  width: 100%;

  .slider {
    background: #fff;
    overflow: hidden;
    height: 100%;
    position: relative;
    width: 100%;
    .slide{
      display: none;
      height: 100%;
      position: absolute;
      width: 100%;
    }
  }
  .slider-directions {
    .slider-directions-prev, .slider-directions-next  {
      cursor: pointer;
      height: 48px;
      position: absolute;
      top: 35%;
      width: 24px;
      z-index: 10;
      box-shadow: 0;

      transition-property: left,right,box-shadow;
      transition-duration: 0.5s;
      transition-timing-function: ease;
    }
    .slider-directions-prev:after, .slider-directions-next:after  {
      display: block;
      line-height: 48px;
    }
    .slider-directions-prev {
      left: -24px;
    }
    .slider-directions-next {
      right: -24px;
    }
  }

  .slider-navigation {
    bottom: 4px;
    color: #333;
    left: 2px;
    position: absolute;
    z-index: 10;

    transition-property: bottom;
    transition-duration: 0.5s;
    transition-timing-function: ease;

    .slider-navigation-item {
      cursor: pointer;
      background: #eee;
      border-radius: 100%;
      box-shadow: 0;
      display: inline-block;
      float: left;
      height: 12px;
      margin-left: 2px;
      margin-right: 2px;
      text-indent: -9999px;
      width: 12px;

      transition-property: box-shadow;
      transition-duration: 0.5s;
      transition-timing-function: ease;
    }
  }
  .slider-navigation .slider-navigation-item.active {
    background: #333;
    color: #eee;
  }
}
.sliderWrapper:hover {
  .slider-navigation {
    bottom: 4px;
    .slider-navigation-item {
       box-shadow: 0 0 8px 0 rgba(0,0,0,0.8);
     }
  }
  .slider-directions-prev {
    content: ' ';
    left: 0;
    box-shadow: 0 0 8px 0 rgba(0,0,0,0.8);
    background: image-url("slider/prev.png");
  }

  .slider-directions-next {
    content: ' ';
    background: image-url("slider/next.png");
    box-shadow: 0 0 8px 0 rgba(0,0,0,0.8);
    right: 0;
  }
}
