%html
  / <![endif]
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:charset => "utf-8"}/
    / mobile settings
    %meta{:content => "width=device-width, maximum-scale=1, initial-scale=1, user-scalable=0", :name => "viewport"}/
    %title= @title || "Web Dev Camp"
    %meta{:content => "web development course, web dev course", :name => "keywords"}/
    %meta{:content => "#{description}", :name => "description"}/
    %meta{:content => "Torsten Ruger", :name => "Author"}/
    %meta{ name: "google-site-verification" , content: "U86xRj-I-z08iE7t1EOXwZeiVLj9ItO3ydSpqrsdE3Y"}

    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    = render 'layouts/slidetop'
    #wrapper
      #header.sticky.clearfix
        %header#topNav
          .container
            / Mobile Menu Button
            %button.btn.btn-mobile{"data-target" => ".nav-main-collapse", "data-toggle" => "collapse"}
              %i.fa.icon-menu
            %a.logo.pull-left{:href => page_path(:index)}
              = image_tag "web_logo.png" , class: :desktop
              = image_tag "web_logo_mobile.png" , class: :mobile
            = render 'layouts/navigation'
      = render 'layouts/messages'
      = yield
    = render 'layouts/footer'
  %a#toTop{:href => "#"}
