/ FOOTER
%footer#footer
  .container
    .row
      .col-md-3
        / Footer Logo
        = image_tag "web_logo_mobile.png" , :class => "footer-logo"
        / Small Description
        %p Live in bootcamp, learn the code
        %address
          %table
            %tr
              %td
                %i.fa.icon-location
                %br
                %br
                %br
              %td
                Fiskarsintie 513
                %br/
                10480 Antskog
                %br/
                Finland
            %tr
              %td
                %i.fa.icon-phone
              %td Phone: +358-40 7308052
            %tr
              %td
                %i.fa.icon-mail
              %td
                %a{:href => "mailto:info@webdev.camp"} info@webdev.camp
      .col-md-3
        %h4.letter-spacing-1 LATEST UPDATES
        %ul.footer-posts.list-unstyled
          %li
            =link_to "Updated Privacy Policy" , page_path(:privacy)
            %small 24 June 2016
          %li
            =link_to "Application process ready, first course 26.9" ,  new_user_registration_path

            %small 20 May 2016
          %li
            =link_to "Web Dev on Facebook!" , "https://www.facebook.com/webdev.camp" , target: :blank
            %small 03 May 2016
      .col-md-3
        %h4.letter-spacing-1 EXPLORE Web Dev Camp
        %ul.footer-links.list-unstyled
          %li= link_to "Camp" , page_path(:camp)
          %li= link_to "Teachers" , page_path(:course , anchor: :teachers)
          %li= link_to "Payment Plans" , page_path(:payment)
          %li= link_to "Teaching opportunities" , page_path(:teaching)
          %li= link_to "Sponsoring" , page_path(:sponsoring)
      .col-md-3
        %h4.letter-spacing-1 Account
        %ul.footer-links.list-unstyled
          -if user_signed_in?
            %li= sign_out_link
            %li= link_to "Account" ,  edit_user_registration_path
            %li= link_to "Resume" ,   resume_path
          -else
            %li
              = simple_form_for(:user, :url => session_url(:user), :html => { :role => 'form' , class: "form-horizontal"}) do |f|
                .input-group
                  %span.input-group-addon
                    %i.fa.icon-mail
                  = f.email_field :email, class: 'form-control' , placeholder: :email
                .input-group
                  %span.input-group-addon
                    %i.fa.icon-lock
                  = f.password_field :password, class: 'form-control' , placeholder: :password
                  %span.input-group-btn
                    = f.submit "Sign in" , class: "btn btn-success"
            %li= link_to "Sign In" , new_user_session_path
            %li= link_to "Sign Up" , new_registration_path(:user)
        .margin-top-20
          %a.social-icon.social-icon-border.social-facebook.pull-left{"data-placement" => "top",  :href => "https://www.facebook.com/webdev.camp", :title => "Facebook" , target: :blank }
            %i.icon-facebook
            %i.icon-facebook
  .copyright
