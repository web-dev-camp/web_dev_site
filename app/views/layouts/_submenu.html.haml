/
  PAGE MENU

  AVAILABLE CLASSES:
  \.page-menu-light
  \.page-menu-dark
  \.page-menu-transparent
  \.page-menu-color
#page-menu.page-menu-color
  .container
    %nav.pull-right
      %button#page-menu-mobile.fa.fa-bars
      /
        \.menu-scrollTo - for scrollto page menu / no external links
      %ul.list-inline
        - {"web" => "Web" , "dev" => "Dev" , "course" => "Course" , "teachers" => "Teachers" }.each do |slug , menu|
          %li{class: (params[:id] == slug) && "active" }
            =link_to menu , page_path(slug)
