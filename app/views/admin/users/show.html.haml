%h2.users_show_start
  = "User : " + @user.email
  -if @user.admin?
    (Admin)
%p
  %b= "Name : " + @user.name.to_s
%p
  %b= "Street : " + @user.street.to_s
%p
  %b= "City : " + @user.city.to_s
%p
  %b= "Country : " + @user.country.to_s

= link_to "Back", admin_users_path, :class => "btn btn-warning"
.users_show_end
